{
  "name": "@boiler/root",
  "version": "1.0.0",
  "description": "Boilerplate for React and Fastify monorepo with TypeScript",
  "private": "true",
  "keywords": [
    "react",
    "fastify",
    "typescript",
    "monorepo",
    "boilerplate"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "npm run --workspaces clean && rimraf dist coverage",
    "build:check": "tsc --build",
    "build:emit": "npm run --workspaces build:emit",
    "build": "npm run build:check && npm run build:emit",
    "lint": "npm run --workspaces lint",
    "format": "npm run --workspaces format",
    "test": "vitest run --coverage"
  },
  "workspaces": [
    "backend",
    "frontend",
    "infra",
    "common"
  ],
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.5",
    "@tsconfig/strictest": "^2.0.2",
    "@tsconfig/vite-react": "^2.0.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^0.34.6",
    "esbuild": "^0.19.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-unicorn": "^49.0.0",
    "glob": "^10.3.10",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
