{
  "name": "@boiler/root",
  "version": "1.0.0",
  "description": "Boilerplate for React and Fastify monorepo with TypeScript",
  "private": "true",
  "keywords": [
    "react",
    "fastify",
    "typescript",
    "monorepo",
    "boilerplate"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "npm run --workspaces clean",
    "build:decl": "tsc --build",
    "build:src": "npm run --workspaces build:src",
    "build": "npm run build:decl && npm run build:src"
  },
  "workspaces": [
    "backend",
    "frontend",
    "common"
  ],
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.5",
    "@tsconfig/strictest": "^2.0.2",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.9.0",
    "esbuild": "^0.19.5",
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  }
}
