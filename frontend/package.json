{
  "name": "@boiler/frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist coverage",
    "dev": "vite",
    "build:check": "tsc --build tsconfig.build.json",
    "build:emit": "vite build",
    "build": "npm run build:check && npm run build:emit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --ignore-path ../.gitignore",
    "preview": "vite preview",
    "start": "npm run preview",
    "format:check": "prettier --ignore-path ../.gitignore --check .",
    "format": "npm run format:check -- --write",
    "test:watch": "vitest",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^22.1.0",
    "vite": "^5.0.8"
  }
}
