{
  "name": "@boiler/common",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist coverage",
    "dev": "tsx --watch src/index.ts",
    "build:check": "tsc --build tsconfig.build.json",
    "build:emit": "tsx ./bundle.ts",
    "build": "npm run build:check && npm run build:emit",
    "start": "node dist/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --ignore-path ../.gitignore",
    "format:check": "prettier --ignore-path ../.gitignore --check .",
    "format": "npm run format:check -- --write",
    "test:watch": "vitest",
    "test": "vitest run --coverage"
  }
}
